<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Elevate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Elevate"
    Title="Elevate"
    BackgroundColor="White"
    FlyoutBackgroundColor="#778873"
    Shell.FlyoutBehavior="Locked"
    TitleColor="#778873">

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="Todays Task"
        ContentTemplate="{DataTemplate local:TodaysTaskPage}"
        Route="TodaysTaskPage" />

    <ShellContent
        Title="Add Task"
        ContentTemplate="{DataTemplate local:AddTaskPage}"
        Route="AddTaskPage" />

    <ShellContent
        Title="Combine Tasks"
        ContentTemplate="{DataTemplate local:CombineTaskPage}"
        Route="CombineTaskPage" />

    <ShellContent
        Title="Export"
        ContentTemplate="{DataTemplate local:ExportPage}"
        Route="ExportPage" />

</Shell>
