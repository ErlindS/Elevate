<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Elevate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Elevate"
    Shell.FlyoutBehavior="Locked"
    Title="Elevate">

    <ShellContent
    Title="Todays Task"
    ContentTemplate="{DataTemplate local:TodaysTaskPage}"
    Route="TodaysTaskPage" />

    <ShellContent
    Title="Add Task"
    ContentTemplate="{DataTemplate local:AddTaskPage}"
    Route="AddTaskPage" />

    <ShellContent
    Title="Combine Tasks"
    ContentTemplate="{DataTemplate local:CombineTaskPage}"
    Route="CombineTaskPage" />

    <ShellContent
    Title="Task Mapping"
    ContentTemplate="{DataTemplate local:MapTaskPage}"
    Route="MapTaskPage" />

    <ShellContent
    Title="Analytics"
    ContentTemplate="{DataTemplate local:AnalyticsPage}"
    Route="AnalyticsPage" />

</Shell>
