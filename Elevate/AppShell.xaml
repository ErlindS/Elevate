<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Elevate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Elevate"
    Shell.FlyoutBehavior="Locked"
    Title="Elevate">

    <ShellContent
    Title="Todays Task"
    ContentTemplate="{DataTemplate local:TodaysTask}"
    Route="TodaysTask" />

    <ShellContent
    Title="Add Task"
    ContentTemplate="{DataTemplate local:AddTask}"
    Route="AddTask" />

    <ShellContent
    Title="Combine Task"
    ContentTemplate="{DataTemplate local:Analytic}"
    Route="Analytic" />
    
    <ShellContent
    Title="Sequence"
    ContentTemplate="{DataTemplate local:Sequence}"
    Route="Sequence" />

    <ShellContent
        Title="Mapping"
        ContentTemplate="{DataTemplate local:Mapping}"
        Route="Mapping" />

</Shell>
