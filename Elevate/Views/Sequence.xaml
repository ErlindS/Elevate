<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:as="http://mindfusion.eu/scheduling/maui"
             x:Class="Elevate.Sequence"
             Title="Basic Grid demo">

    <ContentPage.Resources>
        <Style x:Key="TextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="LightGray"/>
            
        </Style>
        <Style x:Key="BoxStyle" TargetType="BoxView">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="Purple" />
        </Style>
    </ContentPage.Resources>
    
    

    <Grid ColumnSpacing="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label 
            Grid.Column="7"
            Text="Task A"
            BackgroundColor="LightBlue"
            Padding="10"
            HorizontalOptions="Center"
            VerticalOptions="Center">
        </Label>

        <BoxView Grid.Row="0" Grid.Column="0"
                 Style="{StaticResource BoxStyle}"/>
        <Label Grid.Column="0"
               Text="Row 0, Column 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Style="{StaticResource TextStyle}"/>
        
        
        <BoxView Grid.Row="0" Grid.Column="1"
                 Style="{StaticResource BoxStyle}" />
        <Label Grid.Column="1"
               Text="Row 0, Column 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Style="{StaticResource TextStyle}"/>
        
        
        <BoxView Grid.Row="0" Grid.Column="2"
                 Style="{StaticResource BoxStyle}" />
        <Label Grid.Column="2"
               Text="Row 0, Column 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Style="{StaticResource TextStyle}"/>
        
        
        <BoxView Grid.Row="0" Grid.Column="3"
                 Style="{StaticResource BoxStyle}" />
        <Label Grid.Column="3"
               Text="Row 0, Column 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Style="{StaticResource TextStyle}"/>
        
        
        <BoxView Grid.Row="0" Grid.Column="4"
                 Style="{StaticResource BoxStyle}" />
        <Label Grid.Column="4"
               Text="Row 0, Column 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Style="{StaticResource TextStyle}"/>
        
        
        <BoxView Grid.Row="0" Grid.Column="5"
                 Style="{StaticResource BoxStyle}" />
        <Label Grid.Column="5"
               Text="Row 0, Column 1"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Style="{StaticResource TextStyle}"/>

    </Grid>
</ContentPage>