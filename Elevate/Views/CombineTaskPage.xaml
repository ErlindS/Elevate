<ContentPage
    x:Class="Elevate.CombineTaskPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page2"
    BackgroundColor="#F5F7F5">

    <ContentPage.Resources>
        <Color x:Key="PrimaryDark">#778873</Color>
        <Color x:Key="PrimaryLight">#A1BC98</Color>
        <Color x:Key="TextDark">#4A4A4A</Color>
        <Color x:Key="White">#FFFFFF</Color>
        <Color x:Key="Error">#E57373</Color>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            LineBreakMode="WordWrap"
            Text="{Binding Sortedtasks.Name}"
            TextColor="{StaticResource TextDark}"
            VerticalOptions="Center" />

        <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            BackgroundColor="{StaticResource PrimaryDark}"
            Command="{Binding Source={x:Reference Page2}, Path=BindingContext.OutCommand}"
            CommandParameter="{Binding Id}"
            CornerRadius="20"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="Out"
            TextColor="{StaticResource White}" />

        <!--  Left Side  -->
        <CollectionView
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            ItemsSource="{Binding Sortedtasks.SubTasks}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Border
                            Padding="15"
                            BackgroundColor="{StaticResource White}"
                            Stroke="#A1BC98"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Grid ColumnDefinitions="Auto, *, *, *, *">

                                <Label
                                    Grid.Column="0"
                                    LineBreakMode="WordWrap"
                                    Text="{Binding Id}"
                                    TextColor="{StaticResource TextDark}"
                                    VerticalOptions="Center" />

                                <Label
                                    Grid.Column="1"
                                    LineBreakMode="WordWrap"
                                    Text="{Binding Name}"
                                    TextColor="{StaticResource TextDark}"
                                    VerticalOptions="Center" />

                                <Button
                                    Grid.Column="2"
                                    Margin="10"
                                    BackgroundColor="{StaticResource PrimaryDark}"
                                    Command="{Binding Source={x:Reference Page2}, Path=BindingContext.BaseCommand}"
                                    CommandParameter="{Binding Id}"
                                    CornerRadius="20"
                                    FontAttributes="Bold"
                                    HeightRequest="40"
                                    Text="Base"
                                    TextColor="{StaticResource White}" />

                                <Button
                                    Grid.Column="3"
                                    Margin="10"
                                    BackgroundColor="{StaticResource PrimaryDark}"
                                    Command="{Binding Source={x:Reference Page2}, Path=BindingContext.RemoveTaskCommand}"
                                    CommandParameter="{Binding Id}"
                                    CornerRadius="20"
                                    FontAttributes="Bold"
                                    HeightRequest="40"
                                    Text="Remove"
                                    TextColor="{StaticResource White}" />
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  right side title  -->
        <Label
            Grid.Row="0"
            Grid.Column="3"
            Margin="10"
            LineBreakMode="WordWrap"
            Text="Unsorted Tasks"
            TextColor="{StaticResource TextDark}"
            VerticalOptions="Center" />

        <!--  right side  -->
        <CollectionView
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,10,0,0"
            ItemsSource="{Binding Unsortedtasks.SubTasks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Border
                            Padding="15"
                            BackgroundColor="{StaticResource White}"
                            Stroke="#A1BC98"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Grid ColumnDefinitions="Auto, *">

                                <Button
                                    Grid.Column="0"
                                    Margin="10"
                                    BackgroundColor="{StaticResource PrimaryDark}"
                                    Command="{Binding Source={x:Reference Page2}, Path=BindingContext.MoveTaskCommand}"
                                    CommandParameter="{Binding Id}"
                                    CornerRadius="20"
                                    FontAttributes="Bold"
                                    HeightRequest="40"
                                    Text="Add"
                                    TextColor="{StaticResource White}"
                                    WidthRequest="80" />

                                <Label
                                    Grid.Column="1"
                                    LineBreakMode="WordWrap"
                                    Text="{Binding Name}"
                                    TextColor="{StaticResource TextDark}"
                                    VerticalOptions="Center" />
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>