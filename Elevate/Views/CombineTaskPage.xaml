<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elevate.CombineTaskPage">


    <FlexLayout Direction="Column" x:Name="CombineTaskView">
        <CollectionView ItemsSource="{Binding TasksToCombine}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, 2*, Auto" Padding="10">
                        <Border Grid.Column="0" Margin="10" Stroke="MediumPurple" StrokeThickness="3">
                            <Label Text="{Binding Name}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        </Border>

                        <Picker Margin="10"
                                Grid.Column="1"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                ItemsSource="{Binding Path=BindingContext.AvailableProjects, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                ItemDisplayBinding="{Binding Name}"
                                SelectedItem="{Binding Path=BindingContext.SelectedProject, Source={RelativeSource AncestorType={x:Type ContentPage}}}">
                        </Picker>

                        <Button Text="Add to Project"
                                Grid.Column="2"
                                Margin="10"
                                Command="{Binding Path=BindingContext.AddTaskToSelectedProjectCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding .}" />
                        <Grid.Triggers>
                            <DataTrigger TargetType="Grid"
                                         Binding="{Binding IsSorted}"
                                         Value="True">
                                <Setter Property="IsVisible" Value="False" />
                                <Setter Property="HeightRequest" Value="0" />
                            </DataTrigger>
                        </Grid.Triggers>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </FlexLayout>
</ContentPage>