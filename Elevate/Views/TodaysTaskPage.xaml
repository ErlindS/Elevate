<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Elevate.TodaysTaskPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Elevate.ViewModels"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout>

            <Grid ColumnDefinitions="auto,auto,auto">
                <Label
                    Grid.Column="0"
                    Margin="0,0,0,20"
                    FontAttributes="Bold"
                    FontSize="Header"
                    HorizontalOptions="Center"
                    Text="Here are your daily tasks  Today is: "
                    TextColor="#778873" />

                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="Header"
                    HorizontalOptions="Center"
                    Text="{Binding Weekday}"
                    TextColor="#778873" />


                <Button
                    Grid.Column="2"
                    Margin="20,0,0,0"
                    Command="{Binding UpdateTodaysTaskCommand}"
                    Text="Update Tasks" />
            </Grid>

            <Grid ColumnDefinitions="*,*,*,*,*">
                <Label
                    Grid.Column="0"
                    Padding="20"
                    HorizontalOptions="Center"
                    Text="Checkbox" />
                <Label
                    Grid.Column="1"
                    Padding="20"
                    HorizontalOptions="Center"
                    Text="Your Todo" />
                <Label
                    Grid.Column="2"
                    Padding="20"
                    HorizontalOptions="Center"
                    Text="Start Time" />
                <Label
                    Grid.Column="3"
                    Padding="20"
                    HorizontalOptions="Center"
                    Text="End Time" />
                <Label
                    Grid.Column="4"
                    Padding="20"
                    HorizontalOptions="Center"
                    Text="Duration in hours" />
            </Grid>

            <CollectionView Margin="0,10,0,0" ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Padding="20"
                            ColumnDefinitions="*,*,*,*,*"
                            RowDefinitions="Auto, Auto, Auto">
                            <CheckBox
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                IsChecked="{Binding IsDone}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Text="{Binding Name}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Text="{Binding StartTime}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="3"
                                HorizontalOptions="Center"
                                Text="{Binding EndTime}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="4"
                                HorizontalOptions="Center"
                                Text="{Binding Duration}"
                                VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Here are your daily routines" TextColor="#778873" />

            <CollectionView Margin="0,10,0,0" ItemsSource="{Binding Routine2}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Padding="20"
                            ColumnDefinitions="*,*,*,*,*"
                            RowDefinitions="Auto, Auto, Auto">
                            <CheckBox
                                Grid.Column="0"
                                HorizontalOptions="Center"
                                IsChecked="{Binding IsDone}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                HorizontalOptions="Center"
                                Text="{Binding Name}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                Text="{Binding StartTime}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="3"
                                HorizontalOptions="Center"
                                Text="{Binding EndTime}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="4"
                                HorizontalOptions="Center"
                                Text="{Binding Duration}"
                                VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>