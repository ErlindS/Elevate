<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:vm="clr-namespace:Elevate.ViewModels"  
             x:Class="Elevate.TodaysTaskPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout>

            <Grid ColumnDefinitions="auto,auto,auto">
                <Label Text="Here are your daily tasks  Today is: "  
                   FontSize="Header"  
                   FontAttributes="Bold"  
                   HorizontalOptions="Center"  
                   Margin="0,0,0,20" 
                   Grid.Column="0"
                   TextColor="#778873"/>

                <Label Text="{Binding Weekday}" Grid.Column="1"
                       FontSize="Header"  
                        FontAttributes="Bold"  
                        HorizontalOptions="Center"  
                       TextColor="#778873"/>


                <Button Text="Update Tasks" Command="{Binding UpdateTodaysTaskCommand}" Grid.Column="2" Margin="20,0,0,0"/>
            </Grid>

            <Grid ColumnDefinitions="*,*,*,*,*">
                <Label Text="Checkbox" Padding="20" Grid.Column="0" HorizontalOptions="Center"/>
                <Label Text="Your Todo" Padding="20" Grid.Column="1" HorizontalOptions="Center"/>
                <Label Text="Start Time" Padding="20" Grid.Column="2" HorizontalOptions="Center"/>
                <Label Text="End Time" Padding="20" Grid.Column="3" HorizontalOptions="Center"/>
                <Label Text="Duration in hours" Padding="20" Grid.Column="4" HorizontalOptions="Center"/>
            </Grid>

            <CollectionView ItemsSource="{Binding Tasks}"  
                            Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto, Auto, Auto" Padding="20">
                            <CheckBox IsChecked="{Binding IsDone}" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding Name}" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding StartTime}" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding EndTime}" Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding Duration}" Grid.Column="4" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Here are your daily routines"
                   TextColor="#778873"/>

            <CollectionView ItemsSource="{Binding Routine2}"  
                            Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto, Auto, Auto" Padding="20">
                            <CheckBox IsChecked="{Binding IsDone}" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding Name}" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding StartTime}" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding EndTime}" Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Text="{Binding Duration}" Grid.Column="4" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>