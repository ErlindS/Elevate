<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elevate.AddTaskPage"
             BackgroundColor="White"
             >
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">

            <Border
                Stroke="#778873"
                StrokeThickness="4"
                StrokeShape="RoundRectangle 50"
                Padding="16,8"
                HorizontalOptions="Center"
            >
                <Label Text="Meine TODOs"
                       FontSize="Header"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,0"
                       TextColor="#778873"
                 />
            </Border>

            <Grid ColumnDefinitions="*, Auto, Auto" Background="White">
                <Entry Text="{Binding NewTodoText}"
                       Placeholder="Add your task"
                       Grid.Column="0"
                       Grid.Row="0"
                       TextColor="White"
                       PlaceholderColor="White"
                       BackgroundColor="#A1BC98"
                       />
                <Button Text="Hinzufügen"
                        Grid.Column="2"
                        Grid.Row="0"
                        BorderColor="#778873"
                        BorderWidth="4"
                        TextColor="#778873"
                        BackgroundColor="White"
                        Command="{Binding AddItemCommand}" />
            </Grid>

            <Label Text="Here are your Tasks" TextColor="#A1BC98" FontSize="50"/>

            <CollectionView ItemsSource="{Binding tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="10" >
                            <Border StrokeShape="RoundRectangle 10,10,10,10" Margin="0,10,10,10">
                                <Label 
                                   Text="{Binding Name}"
                                   Grid.Column="0"
                                   VerticalOptions="Center"
                                   LineBreakMode="WordWrap" 
                                   Background="White"
                                   Padding="20"
                                       TextColor="#A1BC98"
                                   />
                            </Border>

                            <Button Text="Delete Task"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Command="{Binding Path=BindingContext.DeleteTaskCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                    CommandParameter="{Binding .}"
                                    Grid.Column="1"
                                    BackgroundColor="#A1BC98"
                            />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>