<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Elevate.AddTaskPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page"
    BackgroundColor="#F5F7F5">

    <ContentPage.Resources>
        <Color x:Key="PrimaryDark">#778873</Color>
        <Color x:Key="PrimaryLight">#A1BC98</Color>
        <Color x:Key="TextDark">#4A4A4A</Color>
        <Color x:Key="White">#FFFFFF</Color>
        <Color x:Key="Error">#E57373</Color>
    </ContentPage.Resources>

    <Grid Padding="20,10,20,0" RowDefinitions="Auto, Auto, *">

        <Border
            Grid.Row="1"
            Margin="0,0,0,20"
            BackgroundColor="{StaticResource White}"
            HeightRequest="80"
            StrokeShape="RoundRectangle 25"
            StrokeThickness="1">

            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.05"
                    Radius="10"
                    Offset="0,4" />
            </Border.Shadow>

            <Grid ColumnDefinitions="*, Auto">
                <Entry
                    Grid.Column="0"
                    Margin="20,0"
                    FontSize="16"
                    Placeholder="What needs to be done?"
                    PlaceholderColor="#CCC"
                    Text="{Binding NewTodoText}"
                    TextColor="{StaticResource TextDark}"
                    VerticalOptions="Center" />

                <Button
                    Grid.Column="1"
                    Margin="10"
                    BackgroundColor="{StaticResource PrimaryDark}"
                    Command="{Binding AddItemCommand}"
                    CornerRadius="20"
                    FontAttributes="Bold"
                    HeightRequest="40"
                    Text="Add"
                    TextColor="{StaticResource White}"
                    WidthRequest="80" />
            </Grid>
        </Border>

        <CollectionView
            Grid.Row="2"
            Margin="0,10,0,0"
            ItemsSource="{Binding Tasks.SubTasks}">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="12" Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.EmptyView>
                <StackLayout
                    HorizontalOptions="Center"
                    Spacing="10"
                    VerticalOptions="Center">
                    <Label
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="No tasks yet."
                        TextColor="#CCC" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Padding="15"
                        BackgroundColor="{StaticResource White}"
                        StrokeShape="RoundRectangle 15"
                        StrokeThickness="0">

                        <Border.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.05"
                                Radius="5"
                                Offset="0,2" />
                        </Border.Shadow>

                        <Grid ColumnDefinitions="Auto, *, Auto">

                            <CheckBox
                                Grid.Column="0"
                                IsChecked="{Binding IsDone}"
                                Color="{StaticResource PrimaryDark}"
                                VerticalOptions="Center" />

                            <Label
                                Grid.Column="1"
                                FontSize="16"
                                LineBreakMode="TailTruncation"
                                Text="{Binding Name}"
                                TextColor="{StaticResource TextDark}"
                                VerticalOptions="Center" />

                            <Button
                                Grid.Column="2"
                                Margin="10"
                                BackgroundColor="{StaticResource PrimaryDark}"
                                Command="{Binding Source={x:Reference Page}, Path=BindingContext.DeleteItemCommand}"
                                CommandParameter="{Binding Id}"
                                CornerRadius="20"
                                FontAttributes="Bold"
                                HeightRequest="40"
                                Text="Delete"
                                TextColor="{StaticResource White}"
                                WidthRequest="80" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>