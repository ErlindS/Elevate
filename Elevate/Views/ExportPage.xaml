<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Elevate.ExportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Page4"
    BackgroundColor="#F5F7F5">

    <ContentPage.Resources>
        <Color x:Key="PrimaryDark">#778873</Color>
        <Color x:Key="PrimaryLight">#A1BC98</Color>
        <Color x:Key="TextDark">#4A4A4A</Color>
        <Color x:Key="White">#FFFFFF</Color>
        <Color x:Key="Error">#E57373</Color>
    </ContentPage.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Button
            Grid.Row="0"
            Margin="10"
            BackgroundColor="{StaticResource PrimaryDark}"
            Command="{Binding Source={x:Reference Page4}, Path=BindingContext.SaveCommand}"
            CornerRadius="20"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="Save"
            TextColor="{StaticResource White}" />

        <Button
            Grid.Row="1"
            Margin="10"
            BackgroundColor="{StaticResource PrimaryDark}"
            Command="{Binding Source={x:Reference Page4}, Path=BindingContext.LoadCommand}"
            CornerRadius="20"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="Load"
            TextColor="{StaticResource White}" />

        <Button
            Grid.Row="2"
            Margin="10"
            BackgroundColor="{StaticResource PrimaryDark}"
            Command="{Binding Source={x:Reference Page4}, Path=BindingContext.generateCommand}"
            CornerRadius="20"
            FontAttributes="Bold"
            HeightRequest="40"
            Text="Export to PDF"
            TextColor="{StaticResource White}" />
    </Grid>

</ContentPage>