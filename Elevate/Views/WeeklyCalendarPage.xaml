<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Elevate.Views.WeeklyCalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Weekly Planner"
    BackgroundColor="#F5F7F5">

    <ContentPage.Resources>
        <Color x:Key="PrimaryDark">#778873</Color>
        <Color x:Key="PrimaryLight">#A1BC98</Color>
        <Color x:Key="TextDark">#4A4A4A</Color>
        <Color x:Key="White">#FFFFFF</Color>
        <Color x:Key="Success">#66BB6A</Color>
        <Color x:Key="Gray">#F0F0F0</Color>
        <Color x:Key="GridLine">#E0E0E0</Color>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *" Padding="0" RowSpacing="0">

        <!-- Navigation Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10" Padding="15" BackgroundColor="{StaticResource White}">
            <Button
                Grid.Column="0"
                BackgroundColor="{StaticResource PrimaryDark}"
                Command="{Binding PreviousWeekCommand}"
                CornerRadius="8"
                FontAttributes="Bold"
                HeightRequest="36"
                Text="← Prev"
                TextColor="{StaticResource White}"
                WidthRequest="75" />

            <Label
                Grid.Column="1"
                FontSize="16"
                FontAttributes="Bold"
                Text="{Binding WeekTitle}"
                TextColor="{StaticResource TextDark}"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Grid Grid.Column="2" ColumnDefinitions="Auto, Auto" ColumnSpacing="8">
                <Button
                    Grid.Column="0"
                    BackgroundColor="{StaticResource Success}"
                    Command="{Binding GoToTodayCommand}"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="36"
                    Text="Today"
                    TextColor="{StaticResource White}"
                    WidthRequest="65" />

                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource PrimaryDark}"
                    Command="{Binding NextWeekCommand}"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    HeightRequest="36"
                    Text="Next →"
                    TextColor="{StaticResource White}"
                    WidthRequest="75" />
            </Grid>
        </Grid>

        <!-- Main Schedule Grid -->
        <ScrollView Grid.Row="1" Orientation="Both">
            <StackLayout Spacing="0" Padding="0">
                
                <!-- Header Row with Day Names -->
                <Grid ColumnDefinitions="50, 120, 120, 120, 120, 120, 120, 120, 200" ColumnSpacing="0" Padding="0" RowSpacing="0">
                    
                    <!-- Time Column Header -->
                    <BoxView Grid.Column="0" BackgroundColor="{StaticResource Gray}" HeightRequest="50" />
                    
                    <!-- Day Headers -->
                    <Border Grid.Column="1" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <StackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding WeekDays[0].DayName}" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" HorizontalOptions="Center" />
                            <Label Text="{Binding WeekDays[0].DayDate}" FontSize="10" TextColor="#999" HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                    
                    <Border Grid.Column="2" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <StackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding WeekDays[1].DayName}" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" HorizontalOptions="Center" />
                            <Label Text="{Binding WeekDays[1].DayDate}" FontSize="10" TextColor="#999" HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                    
                    <Border Grid.Column="3" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <StackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding WeekDays[2].DayName}" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" HorizontalOptions="Center" />
                            <Label Text="{Binding WeekDays[2].DayDate}" FontSize="10" TextColor="#999" HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                    
                    <Border Grid.Column="4" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <StackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding WeekDays[3].DayName}" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" HorizontalOptions="Center" />
                            <Label Text="{Binding WeekDays[3].DayDate}" FontSize="10" TextColor="#999" HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                    
                    <Border Grid.Column="5" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <StackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding WeekDays[4].DayName}" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" HorizontalOptions="Center" />
                            <Label Text="{Binding WeekDays[4].DayDate}" FontSize="10" TextColor="#999" HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                    
                    <Border Grid.Column="6" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <StackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding WeekDays[5].DayName}" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" HorizontalOptions="Center" />
                            <Label Text="{Binding WeekDays[5].DayDate}" FontSize="10" TextColor="#999" HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                    
                    <Border Grid.Column="7" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <StackLayout Spacing="2" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="{Binding WeekDays[6].DayName}" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" HorizontalOptions="Center" />
                            <Label Text="{Binding WeekDays[6].DayDate}" FontSize="10" TextColor="#999" HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                    
                    <!-- Projects Header -->
                    <Border Grid.Column="8" BackgroundColor="{StaticResource PrimaryLight}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="8">
                        <Label Text="Projekte" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource White}" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Border>
                </Grid>

                <!-- Time Slots - CollectionView für dynamische Zeilen -->
                <CollectionView ItemsSource="{Binding TimeSlots}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="50, 120, 120, 120, 120, 120, 120, 120, 200" ColumnSpacing="0" Padding="0" RowSpacing="0" HeightRequest="60">
                                
                                <!-- Hour Label -->
                                <Border Grid.Column="0" BackgroundColor="{StaticResource Gray}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4">
                                    <Label Text="{Binding DisplayTime}" FontSize="9" TextColor="{StaticResource TextDark}" HorizontalOptions="Center" VerticalOptions="Center" />
                                </Border>

                                <!-- Day Cells (7 Days) -->
                                <Border Grid.Column="1" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />
                                <Border Grid.Column="2" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />
                                <Border Grid.Column="3" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />
                                <Border Grid.Column="4" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />
                                <Border Grid.Column="5" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />
                                <Border Grid.Column="6" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />
                                <Border Grid.Column="7" BackgroundColor="{StaticResource White}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />

                                <!-- Projects Column -->
                                <Border Grid.Column="8" BackgroundColor="{StaticResource Gray}" StrokeThickness="1" Stroke="{StaticResource GridLine}" Padding="4" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </StackLayout>
        </ScrollView>

    </Grid>
</ContentPage>