<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Elevate.WeeklyCalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Weekly Calendar"
    BackgroundColor="#F5F7F5">

    <ContentPage.Resources>
        <Color x:Key="PrimaryDark">#778873</Color>
        <Color x:Key="PrimaryLight">#A1BC98</Color>
        <Color x:Key="TextDark">#4A4A4A</Color>
        <Color x:Key="White">#FFFFFF</Color>
        <Color x:Key="Success">#66BB6A</Color>
        <Color x:Key="Gray">#F0F0F0</Color>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, *" Padding="15">

        <!-- Header with Navigation -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Margin="0,0,0,20">

            <Button
                Grid.Column="0"
                BackgroundColor="{StaticResource PrimaryDark}"
                Command="{Binding PreviousWeekCommand}"
                CornerRadius="12"
                FontAttributes="Bold"
                HeightRequest="40"
                Text="← Prev"
                TextColor="{StaticResource White}"
                WidthRequest="85" />

            <StackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Label
                    FontSize="18"
                    FontAttributes="Bold"
                    Text="{Binding WeekTitle}"
                    TextColor="{StaticResource TextDark}"
                    HorizontalOptions="Center" />
            </StackLayout>

            <Grid Grid.Column="2" ColumnDefinitions="Auto, Auto" ColumnSpacing="10">
                <Button
                    Grid.Column="0"
                    BackgroundColor="{StaticResource Success}"
                    Command="{Binding GoToTodayCommand}"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="40"
                    Text="Today"
                    TextColor="{StaticResource White}"
                    WidthRequest="70" />

                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource PrimaryDark}"
                    Command="{Binding NextWeekCommand}"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="40"
                    Text="Next →"
                    TextColor="{StaticResource White}"
                    WidthRequest="85" />
            </Grid>
        </Grid>

        <!-- Week Days Header -->
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding WeekDays}"
            SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        BackgroundColor="{StaticResource White}"
                        Padding="12,15"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="1"
                        WidthRequest="80">
                        <Border.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.05"
                                Radius="5"
                                Offset="0,2" />
                        </Border.Shadow>
                        <StackLayout Spacing="8" HorizontalOptions="Center">
                            <Label
                                FontSize="12"
                                FontAttributes="Bold"
                                Text="{Binding DayName}"
                                TextColor="{StaticResource PrimaryDark}"
                                HorizontalOptions="Center" />
                            <Label
                                FontSize="14"
                                FontAttributes="Bold"
                                Text="{Binding DayDate}"
                                TextColor="{StaticResource TextDark}"
                                HorizontalOptions="Center" />
                            <Label
                                FontSize="10"
                                Text="{Binding TaskCount, StringFormat='{0} tasks'}"
                                TextColor="#999"
                                HorizontalOptions="Center" />
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Tasks by Day -->
        <ScrollView Grid.Row="2" Margin="0,20,0,0">
            <StackLayout Spacing="20">
                <CollectionView
                    ItemsSource="{Binding WeekDays}"
                    SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="20" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Spacing="12">

                                <!-- Day Header -->
                                <Border
                                    BackgroundColor="{StaticResource PrimaryLight}"
                                    Padding="15,12"
                                    StrokeShape="RoundRectangle 12"
                                    StrokeThickness="0">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackLayout Grid.Column="0" Spacing="4">
                                            <Label
                                                FontSize="14"
                                                FontAttributes="Bold"
                                                Text="{Binding DayName}"
                                                TextColor="{StaticResource White}" />
                                            <Label
                                                FontSize="12"
                                                Text="{Binding DayDate}"
                                                TextColor="{StaticResource White}" />
                                        </StackLayout>
                                        <Label
                                            Grid.Column="1"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            Text="{Binding CompletedCount, StringFormat='{0}/{1}'}"
                                            TextColor="{StaticResource White}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Border>

                                <!-- Tasks for the Day -->
                                <CollectionView
                                    ItemsSource="{Binding Tasks}"
                                    SelectionMode="None">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout ItemSpacing="8" Orientation="Vertical" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.EmptyView>
                                        <StackLayout
                                            HorizontalOptions="Center"
                                            Spacing="8"
                                            VerticalOptions="Center">
                                            <Label
                                                FontSize="12"
                                                HorizontalOptions="Center"
                                                Text="No tasks for this day"
                                                TextColor="#CCC" />
                                        </StackLayout>
                                    </CollectionView.EmptyView>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Padding="15"
                                                BackgroundColor="{StaticResource White}"
                                                StrokeShape="RoundRectangle 12"
                                                StrokeThickness="0"
                                                Margin="0,0,0,8">

                                                <Border.Shadow>
                                                    <Shadow
                                                        Brush="Black"
                                                        Opacity="0.05"
                                                        Radius="5"
                                                        Offset="0,2" />
                                                </Border.Shadow>

                                                <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="12">
                                                    <CheckBox
                                                        Grid.Column="0"
                                                        IsChecked="{Binding IsDone}"
                                                        Color="{StaticResource PrimaryDark}"
                                                        VerticalOptions="Center" />

                                                    <StackLayout Grid.Column="1" Spacing="4">
                                                        <Label
                                                            FontSize="14"
                                                            FontAttributes="Bold"
                                                            LineBreakMode="TailTruncation"
                                                            Text="{Binding Name}"
                                                            TextColor="{StaticResource TextDark}" />
                                                        <StackLayout Orientation="Horizontal" Spacing="8">
                                                            <Label
                                                                FontSize="11"
                                                                Text="{Binding Priority, StringFormat='Priority: {0}'}"
                                                                TextColor="#999" />
                                                            <Label
                                                                FontSize="11"
                                                                Text="{Binding Category}"
                                                                TextColor="#999" />
                                                        </StackLayout>
                                                    </StackLayout>

                                                    <Label
                                                        Grid.Column="2"
                                                        FontSize="11"
                                                        FontAttributes="Bold"
                                                        Text="{Binding Description}"
                                                        TextColor="#999"
                                                        VerticalOptions="Center"
                                                        LineBreakMode="TailTruncation"
                                                        MaxLines="1" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>

    </Grid>
</ContentPage>