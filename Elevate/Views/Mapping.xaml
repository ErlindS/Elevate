<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elevate.Mapping"
             Title="Mapping">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto">
        <Border
            Grid.Row="0"
                x:Name="dropTargetSquare1"
                Stroke="Blue"
                StrokeThickness="4"
                Padding="10, 5">
            <Label Text="Drop Zone 1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>

        <Border
            Grid.Row="1"
                x:Name="dropTargetSquare2"
                Stroke="Red"
                StrokeThickness="4"
                Padding="10, 5">
            <Label Text="Drop Zone 2" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>

            <Border 
                Grid.Row="2"
                x:Name="dropTargetSquare3"
                Stroke="Green"
                StrokeThickness="4"
                Padding="10, 5">
                <Border.GestureRecognizers>
                <DragGestureRecognizer DragStarting="OwnDragStarting"/>
                <DropGestureRecognizer DragOver="OwnDropOver" Drop="OwnDropGesture"/>
                </Border.GestureRecognizers>
            </Border>

        <Border 
                Grid.Row="3"
                x:Name="dropTargetSquare4"
                Stroke="Purple"
                StrokeThickness="4"
                Padding="10, 5">
            
        </Border>
    </Grid>

</ContentPage>
